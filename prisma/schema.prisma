// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Post {
  nightOf   DateTime   @id
  sleepTime DateTime?
  wakeTime  DateTime?
  authorId  String
  author    User       @relation(fields: [authorId], references: [id])

  @@index([authorId])
}

model User {
  id    String  @id
  posts Post[]
}